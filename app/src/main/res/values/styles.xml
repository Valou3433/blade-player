<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/nightlyColorPrimary</item>
        <item name="colorPrimaryDark">@color/nightlyColorPrimaryDark</item>
        <item name="android:itemBackground">@color/nightlyColorBackground</item>

        <item name="preferenceTheme">@style/Theme.Preferences</item>

        <item name="colorAccent">@color/nightlyColorPrimary</item>
        <item name="colorControlNormal">@color/nightlyColorPrimaryLight</item>
        <item name="colorControlActivated">@color/nightlyColorPrimaryLighter</item>
        <item name="colorControlHighlight">@color/nightlyColorPrimaryLighter</item>
        <item name="editTextColor">@color/nightlyColorForcedText</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Nightly.AppTheme" parent="AppTheme"/>
    <style name="Nightly.AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Blade.AppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/bladeColorPrimary</item>
        <item name="colorPrimaryDark">@color/bladeColorPrimaryDark</item>
        <item name="android:itemBackground">@color/bladeColorBackground</item>

        <item name="preferenceTheme">@style/Blade.Preferences</item>

        <item name="colorAccent">@color/bladeColorPrimary</item>
        <item name="colorControlNormal">@color/bladeColorPrimaryLight</item>
        <item name="colorControlActivated">@color/bladeColorPrimaryLighter</item>
        <item name="colorControlHighlight">@color/bladeColorPrimaryLighter</item>
        <item name="editTextColor">@color/bladeColorForcedText</item>
    </style>
    <style name="Blade.AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Green.AppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/greenColorPrimary</item>
        <item name="colorPrimaryDark">@color/greenColorPrimaryDark</item>
        <item name="android:itemBackground">@color/greenColorBackground</item>

        <item name="preferenceTheme">@style/Green.Preferences</item>

        <item name="colorAccent">@color/greenColorPrimary</item>
        <item name="colorControlNormal">@color/greenColorPrimaryLight</item>
        <item name="colorControlActivated">@color/greenColorPrimaryLighter</item>
        <item name="colorControlHighlight">@color/greenColorPrimaryLighter</item>
        <item name="editTextColor">@color/greenColorForcedText</item>
    </style>
    <style name="Green.AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Red.AppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/redColorPrimary</item>
        <item name="colorPrimaryDark">@color/redColorPrimaryDark</item>
        <item name="android:itemBackground">@color/redColorBackground</item>

        <item name="preferenceTheme">@style/Red.Preferences</item>

        <item name="colorAccent">@color/redColorPrimary</item>
        <item name="colorControlNormal">@color/redColorPrimaryLight</item>
        <item name="colorControlActivated">@color/redColorPrimaryLighter</item>
        <item name="colorControlHighlight">@color/redColorPrimaryLighter</item>
        <item name="editTextColor">@color/redColorForcedText</item>
    </style>
    <style name="Red.AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Dark.AppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="android:itemBackground">@color/darkColorBackground</item>

        <item name="preferenceTheme">@style/Dark.Preferences</item>

        <item name="android:textColorPrimary">@color/darkColorForcedText</item>
        <item name="android:textColorSecondary">@color/darkColorSecondText</item>
        <item name="android:textColorTertiary">@color/darkColorSecondText</item>
        <item name="android:textColor">@color/darkColorForcedText</item>

        <item name="colorControlNormal">@color/darkColorPrimaryLight</item>
        <item name="colorControlActivated">@color/darkColorPrimaryLight</item>
        <item name="colorControlHighlight">@color/darkColorPrimaryLighter</item>
        <item name="colorAccent">@color/darkColorPrimary</item>
        <item name="editTextColor">@color/darkColorForcedText</item>
        <item name="android:textColorHint">@color/darkColorSecondText</item>

        <item name="textColorAlertDialogListItem">@color/darkColorForcedText</item>
    </style>
    <style name="Dark.AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Preference theme -->
    <style name="Theme.Preferences" parent="PreferenceThemeOverlay.v14.Material">
        <item name="colorControlNormal">@color/nightlyColorPrimary</item>
        <item name="colorControlActivated">@color/nightlyColorPrimary</item>
        <item name="android:windowBackground">@color/nightlyColorBackground</item>
        <item name="android:background">@color/nightlyColorBackground</item>
        <item name="android:textColor">@color/nightlyColorForcedText</item>
        <item name="android:textColorSecondary">@color/nightlyColorSecondText</item>
    </style>

    <style name="Nightly.Preferences" parent="Theme.Preferences"/>
    <style name="Blade.Preferences" parent="Theme.Preferences">
        <item name="colorControlNormal">@color/bladeColorPrimary</item>
        <item name="colorControlActivated">@color/bladeColorPrimary</item>
        <item name="android:windowBackground">@color/bladeColorBackground</item>
        <item name="android:background">@color/bladeColorBackground</item>
        <item name="android:textColor">@color/bladeColorForcedText</item>
        <item name="android:textColorSecondary">@color/bladeColorSecondText</item>
    </style>
    <style name="Green.Preferences" parent="Theme.Preferences">
        <item name="colorControlNormal">@color/greenColorPrimary</item>
        <item name="colorControlActivated">@color/greenColorPrimary</item>
        <item name="android:windowBackground">@color/greenColorBackground</item>
        <item name="android:background">@color/greenColorBackground</item>
        <item name="android:textColor">@color/greenColorForcedText</item>
        <item name="android:textColorSecondary">@color/greenColorSecondText</item>
    </style>
    <style name="Red.Preferences" parent="Theme.Preferences">
        <item name="colorControlNormal">@color/redColorPrimary</item>
        <item name="colorControlActivated">@color/redColorPrimary</item>
        <item name="android:windowBackground">@color/redColorBackground</item>
        <item name="android:background">@color/redColorBackground</item>
        <item name="android:textColor">@color/redColorForcedText</item>
        <item name="android:textColorSecondary">@color/redColorSecondText</item>
    </style>
    <style name="Dark.Preferences" parent="Theme.Preferences">
        <item name="colorControlNormal">@color/darkColorPrimary</item>
        <item name="colorControlActivated">@color/darkColorPrimary</item>
        <item name="android:windowBackground">@color/darkColorBackground</item>
        <item name="android:textColor">@color/darkColorForcedText</item>
        <item name="android:textColorSecondary">@color/darkColorSecondText</item>
        <item name="android:background">@color/darkColorBackground</item>
    </style>

</resources>
