<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/element_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_unknown" />

    <TextView
        android:id="@+id/element_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/element_image"
        android:layout_toRightOf="@id/element_image"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/element_subtitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/element_title"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/element_image"
        android:layout_toRightOf="@id/element_image"
        android:singleLine="true"
        android:textColor="#424242"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/element_more"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_more_black" />

    <ImageView
        android:id="@+id/element_source0"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/element_subtitle"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/element_image"
        android:layout_toRightOf="@id/element_image" />

    <ImageView
        android:id="@+id/element_source1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/element_subtitle"
        android:layout_toEndOf="@id/element_source0"
        android:layout_toRightOf="@id/element_source0" />

    <ImageView
        android:id="@+id/element_source2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/element_subtitle"
        android:layout_toEndOf="@id/element_source1"
        android:layout_toRightOf="@id/element_source1" />

</RelativeLayout>